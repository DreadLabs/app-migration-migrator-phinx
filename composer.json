{
    "name": "dreadlabs/app-migration-migrator-phinx",
    "description": "Migrator adapter for robmorgan/phinx.",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Thomas Juhnke",
            "email": "dev@van-tomas.de"
        }
    ],
    "require": {
        "robmorgan/phinx": "0.4.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.6",
        "phpmd/phpmd": "~2.2",
        "pdepend/pdepend": "~2.0",
        "phploc/phploc": "~2.1",
        "squizlabs/php_codesniffer": "~2.3",
        "sebastian/phpcpd": "~2.0",
        "satooshi/php-coveralls": "~0.6",
        "codeclimate/php-test-reporter": "dev-master",
        "apigen/apigen": "~4.1"
    },
    "autoload": {
        "psr-4": {
            "DreadLabs\\AppMigration\\Migrator\\Phinx\\": "src/",
            "DreadLabs\\AppMigration\\Migrator\\Phinx\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "doc:api:generate": "php vendor/bin/apigen generate --source='./src' --destination='./build/api/' --access-levels='public,protected,private' --template-theme=default --title='DreadLabs - AppMigrationMigrator - Phinx' --no-source-code"
    }
}
